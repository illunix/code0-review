@model Ravency.Areas.Panel.SubAreas.Configuration.PaymentMethods.Edit.Command

<div class="modal fade" id="modal-edit">
    <div class="modal-dialog">
        <div class="modal-content active">
            <form asp-action="Edit" asp-antiforgery="true">
                <div class="modal-header">
                    <h4 class="modal-title">Edit</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <input data-selected-paymentMethodId type="hidden" asp-for="Id" />

                    <label>Client id (optional)</label>
                    <input asp-for="ClientId" type="password" class="form-control" />

                    <label>Client secret</label>
                    <input asp-for="ClientSecret" type="password" class="form-control" />

                    <label>Status</label>
                    <select id="is-active" asp-for="IsActive" class="form-control">
                        <option value="True">Enabled</option>
                        <option value="False">Disabled</option>
                    </select>
                </div>
                <div class="modal-footer justify-content-between">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Save changes</button>
                </div>
            </form>
        </div>
    </div>
</div>