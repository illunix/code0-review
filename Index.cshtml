@model Ravency.Areas.Panel.SubAreas.Catalog.Categories.Index.Model
@{
    ViewData["Title"] = "Categories";
}

@section Styles
{
    <link rel="stylesheet" href="~/lib/toastr.js/toastr.min.css">
}

<partial name="_Add" />

<div class="content-header">
    <div class="row mb-2">
        <div class="col-sm-0">
            <h3 class="m-0 font-weight-light">Categories</h3>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-12">
        <div class="d-flex flex-row-reverse col-md-12">
            <div class="row mb-2">
                <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#modal-add">Add New</button>
            </div>
        </div>
        <div class="card">
            <div class="card-body">
                <table id="datatable" class="table table-striped table-bordered">
                    <thead>
                    <tr>
                        <th>Name</th>
                        <th>Gender</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    @foreach (var category in Model.Categories)
                    {
                        <tr>
                            <td>@category.Name</td>

                            <td>@(category.Gender == 0 ? "Unisex" : "")</td>

                            <td class="project-actions text-right">
                                <button type="button" class="btn btn-danger btn-sm show-delete-confirm-modal-btn" data-id="@category.Id">
                                    <i class="fa fa-trash" title="Delete">
                                    </i>
                                </button>
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    <script src="~/lib/toastr.js/toastr.min.js"></script>
}